<form method="POST" action="/cats/<%= catId %>/?_method=PUT">
    <label>Name</label>
    <input type="text" name="name" value="<%= myCat.name %>">
    <label>Famous For</label>
    <input type="text" name="famousFor" value="<%= myCat.famousFor %>">
    <label>Image</label>
    <input type="text" name="image" value="<%= myCat.image %>">

    <input type="submit">
</form>